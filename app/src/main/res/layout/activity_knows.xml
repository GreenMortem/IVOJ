<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context=".main.ActivityKnows">

    <Button
        android:id="@+id/bnOD"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/mint"
        android:text="ОД"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/bnKTD"
        app:layout_constraintStart_toStartOf="@+id/bnKTD"
        app:layout_constraintTop_toBottomOf="@+id/bnKTD" />

    <Button
        android:id="@+id/bnKTD"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/mint"
        android:text="КТД"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/bnGames"
        app:layout_constraintStart_toStartOf="@+id/bnGames"
        app:layout_constraintTop_toBottomOf="@+id/bnGames" />

    <Button
        android:id="@+id/bnLight"
        android:layout_width="0dp"
        android:layout_height="68dp"

        android:layout_marginTop="16dp"
        android:backgroundTint="@color/mint"
        android:text="Огонки"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/bnOD"
        app:layout_constraintStart_toStartOf="@+id/bnOD"
        app:layout_constraintTop_toBottomOf="@+id/bnOD" />

    <Button
        android:id="@+id/bnGames"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/mint"
        android:text="Игры"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bnSongs"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/mint"
        android:text="Песенник"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/bnLight"
        app:layout_constraintStart_toStartOf="@+id/bnLight"
        app:layout_constraintTop_toBottomOf="@+id/bnLight" />

    <Button
        android:id="@+id/buttonvoj"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="#009688"
        android:text="Страница вожатого"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>